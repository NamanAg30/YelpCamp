<%- include("../partials/header") %>
<div class="container">
	
  <div class="jumbotron">
   <div class="container">
	   <h1>
	     Welcome to Yelp Camp
       </h1>
	   <p>
		   All images are handpicked!!!
	   </p>
      <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>  	
    </div>
   </div>
 <div class="row" style= " display:flex; flex-wrap:wrap;">
<% cgr.forEach(function(camp){ %> 
   <div class="col-md-3 col-sm-6">   
	
	<div class="thumbnail">
	    <img src="<%= camp.image %>">	
	</div>	
	<div class="caption">
	<h4><%= camp.name %></h4>	
	</div>
	   <p>
		   <a href="/campgrounds/<%= camp._id%>" class="btn btn-primary">More Info</a>
	   </p>
   </div>
<% }); %>		
  </div>

</div>
<%- include("../partials/footer") %>