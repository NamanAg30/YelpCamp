<%- include("../partials/header") %>
<div class="container">
   <div class="row">
	 <h1 style="text-align:center;">
	 Edit <%= cgr.name %>
      </h1>
     <div style="width:30%;margin:20px auto;">
		<form action="/campgrounds/<%=cgr._id%>?_method=PUT" method="POST">
	      <div class="form-group">
			<input class="form-control" type="text" name="campground[name]" value="<%= cgr.name %>">  
			</div>
			<div class="form-group">
			<input class="form-control" type="number" name="campground[price]" value="<%= cgr.price %>">  
			</div>
			<div class="form-group">
	      <input class="form-control" type="text" name="campground[image]" value="<%= cgr.image %>">
			</div>
			<div class="form-group">
			<input class="form-control" type="text" name="campground[desc]" value="<%= cgr.desc %>">  
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-block btn-lg">Submit</button>
			</div>
        </form> 
	   <a href="/campgrounds">Go Back</a>
	 </div>
	   

	   
	</div>	
	
</div>

<%- include("../partials/footer") %>